    }

    h2{
        color: white;
        font-size:36px;
        position: absolute;
        top:10%;
        left: 35%;
        font-family: serif, sans-serif;
        color: yellow;
    }

    </style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

    <script>
        $(function(){
            var list = ["#page_one", "#page_two", "#page_three", "#page_four"];
            var levels =[0, -100, -200, -300];

            for (var i=0; i <3; i++){

                setTimeout(function(){
                    for (var j=0; j<4; j++){
                        levels[j] += 100;
                        $(list[j]).animate({top: levels[j] + "%"}, 4000);
                    }
                }, 3000);
            }
        });
    </script>
