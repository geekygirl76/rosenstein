 <!Doctype>
 <html>
  <head>

    <style>

    html, body, header, nav,div, h1,figure,img, ul, li, h2, a,form{
      margin: 0;
      border: 0;
      padding: 0;
      font: inherit;
    vertical-align: baseline;
    }

    .group:after{
      content: "";
      display: block;
      clear: both;
    }

    ul >li{
        list-style:none;
    }

    h1{
        font-weight: bold;
        text-align: center;
        font-size:60px;
        text-shadow: 5px 5px 5px lightgrey;
    }
    header{
        text-align: center;
        text-shadow: 3px 3px 3px lightgrey;
    }

    #page_one{
        position: absolute;
        top:0;
        left:0;
        width: 100%;
        height: 100%;

    }

    #page_two{
         position: absolute;
         left:0;
         top:-100%;
         width: 100%;
         height: 100%;
    }

    #page_three{
         position: absolute;
         left: 0;
         top: -200%;
         width: 100%;
         height: 100%;
    }

    #page_four{
         position: absolute;
         left: 0;
         top: -300%;
         width: 100%;
         height: 100%;
    }

    h2{

        font-size:36px;
        position: absolute;
        top:5%;
        left: 35%;
        font-family: serif, sans-serif;
        color: yellow;
    }
    h6#replay{
        color: yellow;
        font-size: 15px;
        position: absolute;
        top: 10%;
        left: 90%;

    }
    h6#activate{
        color: yellow;
        font-size: 15px;
        position: absolute;
        top: 20%;
        left: 90%;

    }
    h6#replay:hover{
        cursor:pointer;
        color: darkgrey;
    }
    h6#activate:hover{
        cursor:pointer;
        color: darkgrey;
    }

    h2#last{
        left: 20%;
    }

    h2#second{
        left: 25%;
    }
    .welcome-img{
        position: absolute;
        display: inline-block;
        float: left;
    }
    .first{
        position: absolute;
        width:100%;
        display: inline-block;
        left:0%;

    }
    .second{
        position: absolute;
        width:100%;
        display: inline-block;
        left:100%;
    }

    .no-display{

    }

    header{
        position:absolute;
        top:20%;
        left: 30%;
        color: white;
    }
    .links{
        margin: auto;
    }
    .links > li{
        display: inline-block;
        float: left;
        padding: 20px;
        margin-left: 50px;
    }
    .links > li > a{
        text-decoration: none;
        color: white;
    }
    .links > li >a:hover{
        cursor:pointer;
        color: grey;
        text-shadow: 0 0 0;
    }
    </style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

    <script>
        $(function(){
            var list = ["#page_one", "#page_two", "#page_three", "#page_four"];
            var levels =[0, -100, -200, -300];

            for (var i=0; i <3; i++){

                setTimeout(function(){
                    for (var j=0; j<4; j++){
                        levels[j] += 100;
                        $(list[j]).animate({top: levels[j] + "%"}, 4000);
                    }
                }, 3000);
            };



                var pics = [".first", ".second"];
                var n = 0;
                setInterval(function(){
                    $(pics[n %2]).animate({left: "-100%"}, 50000);
                    $(pics[(n+1)%2]).animate({left: "0%"}, 50000);
                    $(pics[n %2]).animate({left: "100%"},0);
                    n = (n+1)%2;
                }, 0);


            $("#replay").click(function(event){
                event.preventDefault();
                event.stopPropagation();
                levels =[0, -100, -200, -300];
                for (var m=0; m<4; m++){

                    $(list[m]).animate({top: levels[m] + "%"}, 100);
                };

                for (var i=0; i <3; i++){

                    setTimeout(function(){
                        for (var j=0; j<4; j++){
                            levels[j] += 100;
                            $(list[j]).animate({top: levels[j] + "%"}, 4000);
                        }
                    }, 3000);
                };

                $(".first").animate({left: "0%"}, 0);
                $(".second").animate({left: "100%"}, 0);

            });
        });
    </script>

        <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

